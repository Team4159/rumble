{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "skipLibCheck": true,
    "paths": {
      "@/middleware/*": ["middleware/*"],
      "@/transport/*": ["transport/*"],
      "@/app": ["app"]
    }
  },
  "include": [
    "src/**/*", "../core/src/types", "../core/src/slices"
  ]
}
